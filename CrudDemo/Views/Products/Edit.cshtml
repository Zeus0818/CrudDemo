@model CrudDemo.Models.Product

@{
    ViewData["Title"] = "Editar producto";
}

<div class="card bg-black text-light shadow-lg border-secondary">
    <div class="card-header border-secondary">
        <h2 class="fw-bold text-warning mb-0">Editar producto</h2>
    </div>

    <div class="card-body">
        <form asp-action="Edit">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Precio</label>
                <input asp-for="Price" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">Cancelar</a>
                <button type="submit" class="btn btn-warning">Actualizar</button>
            </div>

        </form>
    </div>
</div>
